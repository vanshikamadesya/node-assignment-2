<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Uploaded Files</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Uploaded Files</h1>

        <ul class="list-group">
            <% if(users.length > 0) { %>
                <% users.forEach(user => { %>
                    <li class="list-group-item">
                        <strong><%= user.uname %>:</strong>
                        <ul class="list-group mt-2">
                            <% if (user.document && user.document.length > 0) { %>
                                <% user.document.forEach(file => { %>
                                    <li class="list-group-item">
                                        <a href="/api/users/download/<%= file.split('/').pop() %>">
                                            <%= file.split('/').pop() %>
                                        </a>
                                    </li>
                                <% }) %>
                            <% } else { %>
                                <li class="list-group-item">No files uploaded</li>
                            <% } %>
                        </ul>
                    </li>
                <% }) %>
            <% } else { %>
                <h2 class="text-center text-danger">No User Registered</h2>
            <% } %>
        </ul>

        <div class="text-center mt-4">
            <a href="/api/users" class="btn btn-primary">Go Back</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9cY9XM2JlVMn8B5Duo8snUOhmXmnf6Th5PGEU" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>

</html>
